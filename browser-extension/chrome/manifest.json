{
  "manifest_version": 3,
  "name": "Telegram Saver",
  "version": "1.0.0",
  "description": "Save Telegram media and messages directly to your Telegram Saver desktop app",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://t.me/*",
    "https://telegram.me/*",
    "https://web.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://t.me/*",
        "https://telegram.me/*",
        "https://web.telegram.org/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "../icons/icon16.png",
      "32": "../icons/icon32.png",
      "48": "../icons/icon48.png",
      "128": "../icons/icon128.png"
    }
  },
  "icons": {
    "16": "../icons/icon16.png",
    "32": "../icons/icon32.png",
    "48": "../icons/icon48.png",
    "128": "../icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
